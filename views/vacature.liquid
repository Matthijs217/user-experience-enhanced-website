{% render 'partials/head.liquid', title:"vacature" %}
{% render 'partials/header.liquid' %}

<main class="vacancie-container">
    <div>
        <a href="/"><img src="../assets/arrow-left.svg">terug naar alle vacatures</a>
        <h2>{{ vacatures.title }}</h2>
        <p>{{ vacatures.locatie }}</p>
    </div>
    <picture>
        <source type="image/avif" srcset="https://fdnd-agency.directus.app/assets/{{ vacatures.photo }}?height=360&width=482&format=avif">
        <source type="image/webp" srcset="https://fdnd-agency.directus.app/assets/{{ vacatures.photo }}?height=360&width=482&format=webp">
        <img class="sfeerphoto" src="https://fdnd-agency.directus.app/assets/{{ vacatures.photo }}" width="482" height="367" alt="sfeerfoto">
    </picture>
    <p>{{ vacatures.description | downcase }}</p>
</main>

<aside class="vacancie-info">
    <h2>vacature gegevens</h2>
    {% if vacatures.salary %}
        <p>Salaris: €{{ vacatures.salary }} per maand</p>
    {% else %}
        <p>Salaris: €3500 per maand</p>
    {% endif %}
    <p>Dienstverband: {{ vacatures.employment }}</p>

    <p>Locatie:  {{ vacatures.locatie }}</p>

    <p>Datum geplaatst:  {{ vacatures.date_posted |  date: "%B %d, %Y" }}</p>

    <a class="btn" href="vacature/{{ vacature.id }}">Sollicitatie bekijken <img src="../assets/blue-arrow-up.svg"></a>
</aside>

{% render 'partials/footer.liquid' %}