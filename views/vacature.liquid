{% render 'partials/head.liquid', title:"vacature" %}
{% render 'partials/header.liquid' %}

<main class="vacancie-container">
    <div>
        <a href="/"><img src="../assets/arrow-left.svg">terug naar alle vacatures</a>
        <h2>{{ vacatures.title }}</h2>
        <p>{{ vacatures.locatie }}</p>
    </div>
    <img class="sfeerphoto" src="https://fdnd-agency.directus.app/assets/{{ vacatures.photo }}" width="{{ vacatures.width }}" height="{{ vacatures.height }}" alt="sfeerfoto">
    <p>{{ vacatures.description | downcase }}</p>
</main>

<aside class="vacancie-info">
    <h2>vacature gegevens</h2>
    {% if vacatures.salary %}
        <p>Salaris: €{{ vacatures.salary }} per maand</p>
    {% else %}
        <p>Salaris: €3500 per maand</p>
    {% endif %}
    <p>Dienstverband: {{ vacatures.employment }}</p>

    <p>Locatie:  {{ vacatures.locatie }}</p>

    <h2>solliciteren</h2>
    <a class="btn" href="vacature/{{ vacature.id }}">bekijken <img src="../assets/blue-arrow-up.svg"></a>
</aside>

{% render 'partials/footer.liquid' %}